<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ECommerceSuite" parallel="false">
  <listeners>
    <listener class-name="com.example.testNgBaseListener.TestListener"/>
  </listeners>
  <parameter name="browser" value="chrome" />
  <parameter name="baseUrl" value="https://www.saucedemo.com/" />
  <test name="ECommerceTests">
    <classes>
   
<class name="com.example.tests.LoginTest"/>
      <class name="com.example.tests.AddToCartTest"/>
      <class name="com.example.tests.CheckoutTest"/>
     
      <class name="com.example.tests.ProductSearchTest"/>
      <class name="com.example.tests.LogoutTest"/>      
    
    </classes>
  </test>
</suite>
